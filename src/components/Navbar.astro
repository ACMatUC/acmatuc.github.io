---
import { getCollection } from "astro:content";

const allClasses = await getCollection("members");
---

<nav>
  <span>
    <a href="/"
      ><img
        src="/assets/acm-wide-transparent.png"
        alt="ACMATUC Logo"
      />
      <img
        class="hover"
        src="/assets/acm-wide-transparent-black.png"
        alt="ACMATUC Logo"
      />
    </a>
    <menu class="links">
      <div class="dropdown">
        <li>
          <a href="/about">About</a>
          <img src="/assets/dropdown.svg" />
        </li>
        <menu>
          <li><a href="/executives">Executives</a></li>
          <li><a href="/code-of-conduct">Code of Conduct</a></li>
          <li><a href="/constitution">Constitution</a></li>
        </menu>
      </div>
      <div class="dropdown">
        <li>
          <a href="/meetings">Meetings</a>
          <img src="/assets/dropdown.svg" />
        </li>
        <menu>
          <li><a href="/meetings/[[TODO]]">Last Meeting</a></li>
          <li><a href="/meetings/attendance">Attendance</a></li>
        </menu>
      </div>
      <div class="dropdown">
        <li>
          <a href="/members">Members</a>
          <img src="/assets/dropdown.svg" />
        </li>
        <menu>
          {
            allClasses
              .filter(({ id }) => !id.startsWith("alumni/"))
              .map(({ id }) => (
                <li>
                  <a href={`/members/${id}`}>Class of {id}</a>
                </li>
              ))
          }
          <li><a href="/members/#alumni">Alumni</a></li>
        </menu>
      </div>
      <li><a href="/blog">Blog</a></li>
    </menu>
  </span>
  <ul class="socials">
    <a
      target="_blank"
      rel="noopener"
      href="https://instagram.com/acmatuc"
      class="instagram"
    >
      <img
        src="/assets/instagram.svg"
        alt="instagram logo"
      />
    </a>
    <a
      target="_blank"
      rel="noopener"
      href="https://discord.gg/6aYBT6s"
      class="discord"
    >
      <img
        src="/assets/discord.svg"
        alt="discord logo"
      />
    </a>
    <a
      target="_blank"
      rel="noopener"
      href="https://x.com/ACMatUCorg"
      class="x"
    >
      <img
        src="/assets/x.svg"
        alt="x logo"
      />
    </a>
    <a
      target="_blank"
      rel="noopener"
      href="https://linkedin.com/company/acm-uc"
      class="linkedin"
    >
      <img
        src="/assets/linkedin.svg"
        alt="linkedin logo"
      />
    </a>
  </ul>
</nav>

<style lang="scss">
  @use "../styles/theme.scss" as theme;

  a {
    font-family: theme.$font-display;
  }

  nav {
    background-color: theme.$gray-850;
    display: flex;
    justify-content: space-between;
    height: 4rem;

    img {
      height: 4rem;
    }
    img.hover {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
      transition: opacity 100ms linear;
    }

    span {
      display: flex;

      > a {
        margin-left: 0.5rem;
        position: relative;
        display: block;
        transition: background 100ms linear;
      }
      > a:hover {
        background-color: theme.$red-500;

        img {
          opacity: 100;
        }
      }
    }
  }
  .links {
    display: flex;
    margin: 0;
    padding: 0;

    > li,
    > * > li {
      height: 4rem;
      padding: 0 0.8rem;
      display: flex;
      justify-content: center;
      align-items: center;
      color: theme.$gray-100 !important;
      transition: background 100ms linear;

      a {
        margin-left: 8px;
        color: inherit;
        text-decoration: none;
        text-transform: uppercase;
        font-weight: bold;
      }
      a:last-child {
        margin-right: 8px;
      }
      img {
        height: 1.5rem;
        margin-left: 0.3rem;
      }
    }
    > li:hover,
    > *:hover > li {
      background-color: theme.$red-500;
    }

    li::marker {
      content: none;
    }
    .dropdown {
      position: relative;

      menu {
        display: flex;
        pointer-events: none;
        opacity: 0;
        position: absolute;
        top: 4rem;
        left: 0;
        padding: 0.5rem 0;
        margin: 0;
        flex-direction: column;
        background-color: theme.$red-500;
        transition: opacity 100ms linear;

        li {
          color: theme.$white;
          font-family: theme.$font-display;
          text-transform: uppercase;
          font-weight: 700;
          text-wrap: nowrap;
          padding: 0.5rem 1.7rem 0.5rem 1.5rem;
          transition:
            background 100ms linear,
            color 100ms linear;
        }
        li:hover {
          background-color: theme.$red-100;
          color: theme.$red-500;
        }
        a {
          color: inherit;
          text-decoration: none;
        }
      }
    }
    .dropdown:hover menu {
      opacity: 100;
      pointer-events: all;
    }
  }

  .socials {
    display: flex;
    padding: 0;
    margin: 0;
    padding-right: 0.5rem;

    a {
      height: 4rem;
      width: 4rem;
      display: grid;
      place-items: center;
      transition: background 100ms linear;
      margin: 0;
    }
    a:hover.instagram {
      background-color: #ff0069;
    }
    a:hover.discord {
      background-color: #5865f2;
    }
    a:hover.x {
      background-color: #fff;

      img {
        filter: invert(1);
      }
    }
    a:hover.linkedin {
      background-color: #0072b1;
    }
    img {
      height: 1.2rem;
      stroke: white;
      transition: filter 100ms linear;
    }
  }
</style>
